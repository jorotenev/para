<StackLayout class="sidedrawer-left" loaded="onLoaded">
    <GridLayout rows="*, auto" width="100%">
        <StackLayout row="0" class="sidedrawer-content">
            <Button class='btn' id="new" text="{{L('add_expense')}}" tap="onTap"/>
            <Button class='btn' id="view_all" text="{{L('view_all')}}" tap="onTap"/>
            <Button class='btn' id="statistics" text="{{L('statistics')}}" tap="onTap"/>
            <Button class='btn' id="settings" text="{{L('settings')}}" tap="onTap"/>
            <Button class='btn' id="logout" text="{{L('log_out')}}" tap="onTap"/>
        </StackLayout>
        <Label row="2" class="text-center" text="{{'v. '+app_version}}"  verticalAlignment="bottom" ></Label>
    </GridLayout>

</StackLayout>