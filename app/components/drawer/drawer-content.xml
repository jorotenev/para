<StackLayout class="sidedrawer-left" loaded="onLoaded">
    <GridLayout rows="*, auto" width="100%">
        <StackLayout row="0" class="sidedrawer-content">
            <Button class='btn' id="new" text="Add new" tap="onTap"/>
            <Button class='btn' id="view_all" text="View All" tap="onTap"/>
            <Button class='btn' id="statistics" text="Statistics" tap="onTap"/>
            <Button class='btn' id="settings" text="Settings" tap="onTap"/>
            <Button class='btn' id="logout" text="Log out" tap="onTap"/>
        </StackLayout>
        <Label row="2" class="text-center" text="{{'v. '+app_version}}"  verticalAlignment="bottom" ></Label>
    </GridLayout>

</StackLayout>