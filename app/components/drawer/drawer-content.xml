<StackLayout class="sidedrawer-left" loaded="onLoaded">
    <GridLayout rows="70,*,auto" width="100%" class="drawer-wrapper">

        <Image row="0" src="res://icon" class="logo"/>

        <StackLayout row="1" class="drawer-content text-left ">


            <Button class='my-btn drawer-item font-awesome' id="new" text="{{'&#xf067;   ' + L('add_expense_drawer')}}"
                    tap="onTap"/>

            <Button class='my-btn drawer-item font-awesome' id="view_all" text="{{'&#xf0cb;   '+L('view_all')}}"
                    tap="onTap"/>

            <Button class='my-btn drawer-item font-awesome' id="statistics" text="{{'&#xf1ec;   '+L('statistics')}}"
                    tap="onTap"/>

            <Button class='my-btn drawer-item font-awesome' id="settings" text="{{'&#xf013;   '+L('settings')}}"
                    tap="onTap"/>

            <Button class='my-btn drawer-item font-awesome' id="logout" text="{{'&#xf08b;   '+L('log_out')}}" tap="onTap"/>
        </StackLayout>

        <Label row="2" class="text-center" text="{{'v. '+app_version}}" verticalAlignment="bottom"></Label>
    </GridLayout>

</StackLayout>