<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:df="nativescript-pro-ui/dataform"
      navigatingTo="navigatingTo" class="page" actionBarHidden="true">

    <StackLayout class="p-20 ">
        <Label text="Signup" class="h1 text-center"/>
        <Label text="Create a new account" class="text-center"></Label>

        <ActivityIndicator busy="{{activity}}" visibility="{{activity ? 'visible' : 'collapsed'}}"></ActivityIndicator>

        <df:RadDataForm source="{{user}}"
                        metadata="{{metadata}}"
                        id="signup-form">
        </df:RadDataForm>


        <button class="btn btn-outline" text="Signup" id="submit-button" isEnabled="{{!activity}}" tap="signupBtnPressed"/>
        <Label class="text-center" text="or use facebook"></Label>
        <Button text="&#xf230; or use Facebook" tap="withFb"
                class="btn btn-primary btn-active font-awesome"/>

        <Label text="Already have an account?" class="text-center"></Label>
        <Button text="Sign in" tap="goToLogin" class="btn btn-primary"/>

    </StackLayout>
</Page>