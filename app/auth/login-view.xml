<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page" actionBarHidden="true">
    <StackLayout class="p-20">
        <Label text="Login" class="h1 text-center"/>

        <text-field
                id="email" text="{{ email }}" hint="Email" keyboardType="email"
                returnKeyType="next" returnPress="focusPassword"
                autocorrect="false" autocapitalizationType="none"
                row="0"
                color="black"/>
        <text-field id="password" secure="true" text="{{ password }}" hint="Password"
                    returnKeyType="done" returnPress="emailPassLoginBtnPressed"
                    row="1"
                    color="black"/>


        <button text="Login" id="submit-button" tap="emailPassLoginBtnPressed"/>

        <Button text="Fb" tap="onFbLoginBtnPressed" class="btn btn-primary btn-active"/>
    </StackLayout>
</Page>